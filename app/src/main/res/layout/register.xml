<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    >

    <include layout="@layout/top_register"/>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="#e7ffffff"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/number_ll"
        android:background="@drawable/btn_backg2"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 手机号:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/phone"
            android:background="@null"
            android:maxLines="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/et_phone"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_backg"
            android:text="验证码"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/password_ll"
        android:background="@drawable/btn_backg2"
        android:orientation="horizontal"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/number_ll"
        android:layout_alignLeft="@+id/number_ll"
        android:layout_alignStart="@+id/number_ll">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  验证码:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tx_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_password"
            android:inputType="textPassword"
            android:background="@null"
            android:maxLines="1"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/number_ll2"
        android:background="@drawable/btn_backg2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_below="@+id/password_ll"

        android:layout_marginTop="10dp"

        >

        <TextView
            android:id="@+id/tv_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="   密   码:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_number2"
            android:background="@null"
            android:maxLines="1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/password_ll2"
        android:background="@drawable/btn_backg2"
        android:orientation="horizontal"
        android:layout_marginTop="11dp"


        android:layout_below="@+id/number_ll2"
        android:layout_alignLeft="@+id/number_ll"
        android:layout_alignStart="@+id/number_ll">

        <TextView
            android:id="@+id/tv_password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/et_repassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_password2"
            android:inputType="textPassword"
            android:background="@null"
            android:maxLines="1"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_in"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/password_ll2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_backg"
            android:text="注册"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff" />

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>